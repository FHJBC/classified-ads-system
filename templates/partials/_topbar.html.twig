<div class="d-flex justify-content-between px-4">
	<div class="site-info">
		<a href="{{ path('app_home') }}" class="navbar-brand site-logo" style="font-family: Operator Mono XLight; font-style: italic">Sera²</a>
		<p class="site-description">Sera² maika isan-karazany</p>
	</div>
	<div class="d-flex align-items-center justify-content-end w-25 px-lg-0 mb-0">
		{% if app.user %}
			<div class="me-4">
				<a class="text-decoration-none text-info" href="#">
					<i class="fa fa-plus"></i>
					Post an Ad
				</a>
			</div>
			<div class="dropdown dropdown-hover d-flex align-items-center">
				<img src="{{ asset('build/images/mlltn.jpg') }}" alt="" class="avatar rounded-circle" width="30" height="30" style="object-fit: cover"/>

				<a href="" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="margin-left: 0.5rem">
					{{ app.user.username }}
				</a>
				<div class="dropdown-menu" aria-labelledby="navbarDropdown" style="top: 30px; right: 0px">
					<a class="dropdown-item" href="#">
						<i class="fa fa-list"></i>
						Listings
					</a>
					<a class="dropdown-item" href="#">
						<i class="fa fa-user"></i>
						Edit profile
					</a>
					<a class="dropdown-item" href="{{ path('app_logout') }}">
						<i class="fa fa-sign-out"></i>
						Logout
					</a>
				</div>
			</div>

		{% else %}

			<div class="d-flex gap-1">
				<a class="text-decoration-none text-info" href="{{ path('app_login') }}">
					Connexion
				</a>
				<span>|</span>
				<a class="text-decoration-none text-info" href="{{ path('app_register') }}">
					Inscription
				</a>
			</div>

		{% endif %}
	</div>
</div>
